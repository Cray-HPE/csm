#!/bin/sh
# Copyright 2021 Hewlett Packard Enterprise Development LP

TARGET_FILE=$1
YQ=$2

[ -z "$TARGET_FILE" ] && exit 1
[ -z "$YQ" ] && exit 1

cat <<EOF | $YQ w -i -s - $TARGET_FILE
- command: update
  path: spec.kubernetes.services.cray-sysmgmt-health
  value:
    cephExporter:
      endpoints: "{{ network.static_ips.ncn_storage }}"
EOF
